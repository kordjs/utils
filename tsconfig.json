{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}

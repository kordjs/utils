{
  "name": "@kordjs/utils",
  "version": "1.3.0",
  "description": "Utility package for kordjs.",
  "main": "dist/index.js",
  "types": "dist/",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test": "vitest",
    "build": "tsup",
    "pretty": "prettier --write .",
    "lint": "eslint",
    "prepare": "npm run pretty && npm run lint && npm run build",
    "start": "tsup && clear && node tests/.node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kordjs/utils.git"
  },
  "keywords": [
    "template",
    "kordjs"
  ],
  "author": "kordjs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kordjs/utils/issues"
  },
  "homepage": "https://github.com/kordjs/utils#readme",
  "devDependencies": {
    "@types/node": "^24.0.4",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.7",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  }
}
